<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/breeding_pacecounter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pedometer_icon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Steps: "
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/breeding_pacecounter_view"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breeding_pacecounter_text"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/breeding_pacecounter_view"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Calorie: "
            android:layout_below="@+id/breeding_pacecounter_view"
            android:id="@+id/breeding_calorie_view"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breeding_calorie_text"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/breeding_calorie_view"
            android:layout_below="@+id/breeding_pacecounter_view"
            />

    </RelativeLayout>

</RelativeLayout>